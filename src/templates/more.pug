extends layout

block title
    title More | KokoaTalk

block content
    header.screen-header
        h1.screen-header__title More
        .screen-header__icons
            span
                i.fas.fa-search.fa-lg
            span
                i.fas.fa-music.fa-lg
            span
                a(href="settings.html")
                    i.fas.fa-cog.fa-lg
                    span.screen-header__icons--new.badge--new
    
    main.main-screen.more-screen
        .user-component
            .user-component__column
                img.user-component__avatar.user-component__avatar--xl(src="https://pbs.twimg.com/profile_images/983730179359981568/09_V2ORe_400x400.jpg")
                .user-component__text
                    h4.user-component__title Rowlet
                    h6.user-component__subtitle +1 010-0000-0000
                    i.fas.fa-exclamation-circle
            .user-component__column
                i.far.fa-comment-alt.fa-2x
        .icon-row
            .icon-row__icon
                i.far.fa-calendar
                span Calendar
            .icon-row__icon
                i.fas.fa-box
                span Talk Drive
            .icon-row__icon
                i.far.fa-smile-beam
                span Emoticons
            .icon-row__icon
                i.fas.fa-paint-roller
                span Themes
            .icon-row__icon
                i.fas.fa-file-invoice-dollar
                span Account
            .icon-row__icon
                i.far.fa-comments
                span Openchat
        .more-suggestions
            h4.more-suggestions__title Suggestions
            .more-suggestions__icons
                .more-suggestions__icon
                    .more-suggestions__icon-image
                        i.fas.fa-quote-right
                    span.more-suggestions__icon-text Kokoa Story
                .more-suggestions__icon
                    .more-suggestions__icon-image
                        i.far.fa-meh-blank
                    span.more-suggestions__icon-text Kokoa friends
    
block nav-friends
    i.far.fa-user.fa-2x
block nav-chats
    i.far.fa-comment.fa-2x