extends templates/layout

block content
    header.welcome-header
        h1.welcome-header__title Welcome to Kokoa Clone
        p.welcome-header__text If you have a Kokoa Account, log in with your email or phone number.

    form#login-form(action="friends.html", method="get")
        input(type="text", placeholder="Email or phone number")
        input(type="password", placeholder="Password")
        input(type="submit", value="Log In")
        a(href="#") Find Kokoa Account or Password
